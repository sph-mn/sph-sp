#!/bin/sh

# usage: ./exe/install [path-prefix]

prefix="$1"
lib_name="libsph-sp.so"
lib_source="temp/$lib_name"
header_source="source/c-precompiled/main/sph-sp.h"
lib_target="$prefix/usr/lib"
header_target="$prefix/usr/include"

mkdir -p "$lib_target" "$header_target" &&
cp -t "$lib_target" "$lib_source" &&
cp -t "$header_target" "$header_source" &&
chmod 644 "$lib_target/libsph-sp.so" "$header_target/sph-sp.h"
