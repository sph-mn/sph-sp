#!/bin/sh

# description
# * compiles the sc source code to c
# dependencies
# * sph-sc
# * clang-format

root="$PWD"
sc=source/sc
c="source/c-precompiled"

copy_example_config() {
  # the config file is not versioned so that users can customise it
  if [ ! -f "$sc/main/config.sc" ]
  then
    cp "$sc/main/config.example.sc" "$sc/main/config.sc"
  fi
}

copy_submodules() {
  # copy code files from submodules.
  # to not have the whole submodule repository in the source directory
  scl=submodules/sph-sc-lib/source/sc
  mkdir -p "$sc/foreign/sph" &&
  cp --update --target-directory="$sc/foreign" "$scl/sph.sc" &&
  cp --update --target-directory="$sc/foreign/sph" \
     "$scl/sph/status.sc" "$scl/sph/mi-list.sc" \
     "$scl/sph/imht-set.sc" "$scl/sph/helper.sc" \
     "$scl/sph/memreg.sc" "$scl/sph/float.sc" \
     "$scl/sph/types.sc"
}

compile_sc() {
  # create the c source code
  mkdir -p "$c" &&
  cd "$sc" &&
  find -type f -name "*.sc" -exec sc --parents '{}' "$root/$c" \;
  cd "$root" &&
  find "$c" -type f -exec ./exe/format-c -i '{}' \; &&
  mv "$c/main/sph-sp.c" "$c/main/sph-sp.h"
}

copy_example_config &&
copy_submodules &&
compile_sc $@
