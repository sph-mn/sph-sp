#!/usr/bin/guile
!#

(define (install-sp) (copy-file "temp/libguile-sp.so" "/usr/lib/libguile-sp.so")
  (chmod "/usr/lib/libguile-sp.so" 493)
  (let ((scm-dir "/usr/share/guile/site/sph/")) (system* "mkdir" "-p" scm-dir)
    (copy-file "source/sph/sp.scm" (string-append scm-dir "sp.scm"))
    (system* "chmod" "755" "-R" "/usr/share/guile/site/sph")))

(install-sp)